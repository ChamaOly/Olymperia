<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa inferior: degradado tipo metal brillante -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8B4513"
                android:centerColor="#FFD700"
                android:endColor="#8B4513"
                android:angle="270"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Capa superior: efecto de luz radial -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
