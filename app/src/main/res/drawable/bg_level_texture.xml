<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo degradado con textura visual -->
    <gradient
        android:startColor="#FFD700"
        android:endColor="#FF8F00"
        android:angle="45" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde externo dorado oscuro -->
    <stroke
        android:width="2dp"
        android:color="#B8860B" />

    <!-- Relleno interno para resaltar el texto -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />
</shape>
