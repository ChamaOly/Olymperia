<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#AA000000" />
            <size android:width="160dp" android:height="160dp"/>
        </shape>
    </item>

    <!-- CÃ­rculo base dorado -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:centerColor="#FFF8DC"
                android:startColor="#FFD700"
                android:endColor="#B8860B"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="#FFCC00" />
        </shape>
    </item>
</layer-list>
