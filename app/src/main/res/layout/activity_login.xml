<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="252dp"
        android:baselineAligned="false"
        app:srcCompat="@drawable/logo_olymperia" />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/cinzel_regular"
        android:text="Olymperia"
        android:textColor="@color/golden_burnished"
        android:textSize="50sp"
        android:textStyle="bold"
        android:shadowColor="#AA000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="4"
        android:letterSpacing="0.05"
        android:elevation="4dp"
        android:background="@drawable/text_embossed"/>



    <Button
        android:id="@+id/btnStravaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar con Strava" />
</LinearLayout>
