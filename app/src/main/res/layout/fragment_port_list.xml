<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#121212">
    <TextView
        android:id="@+id/tvHonorDestacado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Honor destacado: Ninguno"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_card_glass"
        android:padding="12dp"
        android:fontFamily="@font/cinzel_bold" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerProvinces" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <!--  Mensaje de resultado visible y tocable para cerrar  -->
    <TextView android:id="@+id/tvResultadoPuntos" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:textStyle="bold" android:textColor="#FFFFFF" android:padding="16dp" android:layout_marginTop="12dp" android:background="@drawable/bg_puntos_destacado" android:gravity="center" android:visibility="gone" android:elevation="6dp" android:shadowColor="#000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4" android:fontFamily="@font/cinzel_regular"/>
</LinearLayout>