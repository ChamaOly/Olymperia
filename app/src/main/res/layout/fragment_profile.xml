<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_terroso_dark"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Avatar y Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/avatar_background"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:contentDescription="Avatar" />

            <TextView
                android:id="@+id/tvAthleteName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nombre del atleta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/cinzel_bold" />
        </LinearLayout>

        <!-- División -->
        <TextView
            android:id="@+id/tvDivisionTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="División 10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/ic_division10"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />

        <!-- Nivel y puntos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_level_texture"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel 1 – 0 puntos"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/cinzel_bold" />
        </LinearLayout>

        <!-- Categorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelHC"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_categoria_hc"
                    android:text="HC"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/cinzel_bold" />

                <TextView
                    android:id="@+id/tvHC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_categoria_1"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/cinzel_bold" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_categoria_2"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/cinzel_bold" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_categoria_3"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/cinzel_bold" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Logros destacados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logros Destacados"
            android:textColor="@color/gold_bright"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/cinzel_bold" />
        <TextView
            android:id="@+id/tvHonorDestacado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Honor destacado: Ninguno"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card_glass"
            android:padding="12dp"
            android:fontFamily="@font/cinzel_bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHighlightedTrophies"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btnResetUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar Usuario"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/silver_bright"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
