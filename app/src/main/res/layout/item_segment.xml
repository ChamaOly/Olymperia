<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/layoutSegmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_categoria_1">

        <!-- Nombre del puerto -->
        <TextView
            android:id="@+id/tvSegmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segment Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cinzel_regular"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>

        <!-- Insignia -->
        <ImageView
            android:id="@+id/ivSegmentBadge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/badge_3_1"
            android:contentDescription="Insignia"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <!-- Repeticiones -->
        <TextView
            android:id="@+id/tvSegmentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x5"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/cinzel_regular"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
