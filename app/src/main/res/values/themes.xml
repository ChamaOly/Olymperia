<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Olymperia.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="Theme.Olymperia.DarkAsphaltTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color primario, etc. -->
        <item name="android:windowBackground">@drawable/bg_terroso_dark</item>
    </style>


    <!-- Tema principal de la app -->
    <style name="Theme.Olymperia" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Paleta de colores -->
        <item name="colorPrimary">@color/your_primary</item>
        <item name="colorOnPrimary">@color/your_on_primary</item>
        <item name="colorSecondary">@color/your_secondary</item>
        <item name="colorOnSecondary">@color/your_on_secondary</item>
        <item name="android:navigationBarColor">@color/your_primary</item>
    </style>

    <!-- Puedes definir aquí variantes para modo oscuro, etc. -->
    <style name="Theme.Olymperia.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- …otros overrides… -->
    </style>

    <style name="Olymperia.DarkAsphaltTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


        <item name="android:textColorPrimary">@color/gold_antique</item> <!-- cambia aquí -->
        <item name="android:textColorSecondary">@color/gold_antique</item>
        <item name="colorPrimary">@color/asphalt_dark</item>
        <item name="colorOnPrimary">@color/gold_antique</item>
    </style>



</resources>